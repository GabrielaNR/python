numPedidos = int(input())

for i in range(1, numPedidos + 1):
    prato = input("Qual é o prato?: ")
    calorias = int(input("Quantas calorias?: "))
    vegano = input("O prato é vegano? Digite S para sim e N para não: ")
    
    if vegano == "N":
        ehVegano = False
        print(f"Pedido {numPedidos} : {prato} Não-Vegano {calorias} calorias")
    elif vegano == "S":
        ehVegano = True
        print(f"Pedido {numPedidos} : {prato} Vegano {calorias} calorias")
    else:
        print("Error")
  
